<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico"
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="index.css">
    <title>JobDonor</title>
</head>

<body>
    <nav class="navContainer">
        <div class="leftSection">
            <a href="/"><img src="/images/navIcon.png" alt=""></a>
            <a href="/" class="menuItem">Home</a>
            <a href="/jobs" class="menuItem">Jobs</a>
            <a href="/postJobs" class="menuItem">Post Jobs</a>
        </div>
        <% if(locals.userEmail) {%>
            <div class="rightSection">
                <div class="profileContainer">
                    <b>MK</b>
                </div>
                <div class="profileDetails">
                    <b><%= locals.userName %></b>
                    <b>Last Visit: <%= locals.lastVisit %></b>
                    <b>Role: <%= locals.role %></b>
                    <a href="/logOut">Log out</a>
                </div>
                <!-- <a href="/logOut" class="signUpBtn">Log out</a> -->
            </div>
            <%} else {%>
                <div class="rightSection">
                    <a href="/login" class="signInBtn">Sign In</a>
                    <a href="/register" class="signUpBtn">Sign Up</a>
                </div>
                <%}%>
    </nav>
    <main class="mainContainer">
        <%- body %>
    </main>
    <script src="main.js"></script>
</body>

</html>